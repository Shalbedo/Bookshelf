{% extends 'base.html.twig' %}

{% block title %}Purchase{% endblock %}

{% block body %}
    <h1>{{ book.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ book.amount }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ book.price }}$</td>
            </tr>
            <tr>
                <th>Average rating</th>
                <td>{{ bookAverage }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container-left col-md-1">
        <a href="{{ path('app_order', {'book_id': book.id}) }}"> <button>Purchase</button> </a><br>
    </div>
    <div class="container-left col-md-1">
        <a href="{{ path('app_review', {'book_id': book.id}) }}"> <button>Book reviews</button> </a>
    </div>
{% endblock %}
